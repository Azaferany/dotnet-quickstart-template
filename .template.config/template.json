{
  "$schema": "http://json.schemastore.org/template",
  "author": "Azaferany",

  "name": "Quickstart Template",
  "description":  "template with all essential tools and configs for basic dotnet api",
  "identity": "QuickstartTemplate",
  "shortName": "quickstart",
  "sourceName": "QuickstartTemplate",
  "preferNameDirectory": true,
  "classifications": [
    "Web" ,
    "C#"
  ],
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        "README.md",
        "**/[Bb]in/**",
        "**/[Oo]bj/**",
        ".template.config/**/*",
        ".vs/**/*",
        "**/*.filelist",
        "**/*.user",
        "**/*.lock.json",
        "**/.git/**",
        "*.nuspec",
        "**/node_modules/**",
        "riderModule.iml" ,
        "/_ReSharper.Caches/" ,
        ".idea/" ,
        "/.idea/" ,
        ".git/" ,
        "/.git/" ,
        "logs/",
        ".releaserc",
        "commitlint.config.js",
        "*.md",
        "templatepack.csproj"
      ]
    }
  ]
}
