{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Sentry"
      }
    ],
    "Enrich": [
      "FromLogContext"
    ],
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "@x is not null and TypeOf(@x) not like '%OperationCanceledException%'"
        }
      }
    ]
  },
  "HttpLogging": {
    "LoggingFields": "None"
  },
  "AllowedHosts": "*"
}
