{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug"
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Sentry"
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithSpan"
    ],
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "@x is not null and TypeOf(@x) like '%OperationCanceledException%'"
        }
      }
    ]
  },
  "LogRequestResponse": {
    "LogMode": "LogAll",
    "ResponseBodyLogMode": "LogAll"
  },
  "HttpLogging": {
    "LoggingFields": "All"
  }
}